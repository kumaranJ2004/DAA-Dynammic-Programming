#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    if (n < 0) {
        printf("0\n");
        return 0;
    }

    long long dp[n + 1];

    dp[0] = 1; 
    for (int i = 1; i <= n; i++) {
        dp[i] = 0;
        if (i - 1 >= 0) dp[i] += dp[i - 1];
        if (i - 3 >= 0) dp[i] += dp[i - 3];
    }

    printf("%lld\n", dp[n]);
    return 0;
}
