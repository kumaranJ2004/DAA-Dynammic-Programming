#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int grid[100][100], dp[100][100];

   
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &grid[i][j]);
        }
    }

    // Start position
    dp[0][0] = grid[0][0];

    
    for (int j = 1; j < n; j++) {
        dp[0][j] = dp[0][j - 1] + grid[0][j];
    }

   
    for (int i = 1; i < n; i++) {
        dp[i][0] = dp[i - 1][0] + grid[i][0];
    }

   
    for (int i = 1; i < n; i++) {
        for (int j = 1; j < n; j++) {
            if (dp[i - 1][j] > dp[i][j - 1])
                dp[i][j] = dp[i - 1][j] + grid[i][j];
            else
                dp[i][j] = dp[i][j - 1] + grid[i][j];
        }
    }

    printf("%d\n", dp[n - 1][n - 1]);

    return 0;
}
